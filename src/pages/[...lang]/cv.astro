---
import Layout from '../../layouts/Layout.astro';
import Nav from '../../components/Nav.astro';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';
import {languages} from "../../i18n/ui";
const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

export async function getStaticPaths() {
    return languages.map(lang => ({
        params: { lang: lang.key },
        props: { lang: lang.key }
    }));
}


---


<Layout title={`CV - Thomas Isherwood`}>
    <Nav lang={lang} />

    <main class="cv-page">
        <h1 class="cv-heading">CV / Resume</h1>

        <div class="cv-columns">
            <!-- English CVs -->
            <div class="cv-column">
                <h2>English</h2>
                <a
                        href="/Thomas_CV_En.pdf"
                        class="cv-button"
                        target="_blank"
                        rel="noopener noreferrer"
                >
                    <img src="/download-solid.svg" alt="Download" class="cv-icon" />
                    Developer CV
                </a>
            </div>

            <!-- French CVs -->
            <div class="cv-column">
                <h2>Français</h2>
                <a
                        href="/Thomas_CV_Fr.pdf"
                        class="cv-button"
                        target="_blank"
                        rel="noopener noreferrer"
                >
                    <img src="/download-solid.svg" alt="Télécharger" class="cv-icon" />
                    CV Développeur
                </a>
            </div>
        </div>
    </main>
</Layout>

<style>
    .cv-page {
        max-width: 900px;
        margin: 0 auto;
        padding: var(--space-2xl) var(--space-md);
        text-align: center;
        min-height: calc(100vh - 80px);
    }

    .cv-heading {
        font-size: clamp(2rem, 5vw, 3rem);
        font-weight: 700;
        margin: 0 0 var(--space-xl);
        letter-spacing: -0.02em;
    }

    .cv-columns {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--space-lg);
        max-width: 600px;
        margin: 0 auto;
    }

    .cv-column {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        padding: var(--space-xl);
        border-radius: 12px;
        transition: all 0.2s ease;
    }

    .cv-column:hover {
        border-color: var(--color-accent);
        transform: translateY(-2px);
    }

    .cv-column h2 {
        font-size: 1.5rem;
        font-weight: 600;
        margin: 0 0 var(--space-lg);
        color: var(--color-text);
    }

    .cv-button {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        gap: var(--space-sm);
        padding: 0.75rem 1.5rem;
        font-weight: 500;
        font-size: 1rem;
        background: var(--color-accent);
        color: white;
        border-radius: 8px;
        text-decoration: none;
        transition: all 0.2s ease;
        width: 100%;
    }

    .cv-button:hover {
        background: var(--color-accent-hover);
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
    }

    .cv-icon {
        width: 20px;
        height: 20px;
        flex-shrink: 0;
    }

    @media (min-width: 768px) {
        .cv-columns {
            grid-template-columns: repeat(2, 1fr);
            max-width: none;
        }
    }
</style>