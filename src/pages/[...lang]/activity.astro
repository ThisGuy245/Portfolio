---
import Nav from '../../components/Nav.astro';
import Accordion from '../../components/Accordion.svelte';// Adjust the path as necessary
import {languages} from '../../i18n/ui';
import {getLangFromUrl, translate, useTranslations} from '../../i18n/utils';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
    return languages.map(lang => ({params: {lang: lang.key}}));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

---
<Layout title={t('Welcome')}>
    <Nav lang={lang} />
    <main>
        <Accordion  client:load open={true} id="games"/>
        <Accordion  client:load open={true} id="web"/>
        <Accordion  client:load open={true} id="music"/>
    </main>
</Layout>


<style>
    :root {
        --background-color: #121212;
        --text-color: #e0e0e0;
        --accent-color: #bb86fc;
    }

    body {
        background-color: var(--background-color);
        color: var(--text-color);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    main {
        padding: 2rem;
    }

    header h1 {
        text-align: center;
        color: var(--accent-color);
    }

    section {
        margin-bottom: 2rem;
    }

    h2 {
        color: var(--accent-color);
        border-bottom: 2px solid var(--accent-color);
        padding-bottom: 0.5rem;
    }

    p {
        line-height: 1.6;
    }

    .gallery {
        display: flex;
        gap: 1rem;
    }

    .gallery img {
        width: 100%;
        max-width: 200px;
        border: 2px solid var(--accent-color);
        border-radius: 8px;
    }

    a {
        color: var(--accent-color);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    .project-cards {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        list-style: none;
        padding: 0;
    }

    @media (min-width: 768px) {
        .project-cards {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .link-card {
        list-style: none;
        display: flex;
        flex-direction: column;
        padding: 1px;
        background-color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }

    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        color: white;
        background-color: #23262d;
        opacity: 0.8;
    }

    .iframe-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        border-radius: 7px 7px 0 0;
    }

    .iframe-container iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    h2 {
        margin: 1rem 0 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    .read-more {
        color: var(--accent-color);
        cursor: pointer;
    }

    .link-card:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }

    .link-card:is(:hover, :focus-within) h2 {
        color: rgb(var(--accent-light));
    }
</style>
