---
import Nav from '../../components/Nav.astro';
import Layout from '../../layouts/Layout.astro';
import { languages } from '../../i18n/ui';
import { getLangFromUrl, useTranslations } from '../../i18n/utils';

export async function getStaticPaths() {
    return languages.map(lang => ({
        params: { lang: lang.key },
        props: { lang: lang.key }
    }));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout title={t('AI Game Engine Concept')}>
    <Nav lang={lang} />
    <main class="ai-game-engine-page">
        <!-- Header Section -->
        <header class="project-header">
            <h1>{t('AI Game Engine Concept')}</h1>
            <p>{t('A concept for a game engine navigated through AI, built purely with C++.')}</p>
        </header>

        <!-- Core Concept Section -->
        <section class="core-concept">
            <h2>{t('Core Concept')}</h2>
            <div class="content">
                <p>
                    {t('The AI Game Engine is a revolutionary concept that leverages artificial intelligence to automate game development processes. The engine uses AI to generate game worlds, design levels, and even create NPC behaviors, allowing developers to focus on creativity rather than repetitive tasks. This Task will be using OpenGL, SDL2 and Winsock for Windows.')}
                </p>
                <img src="/media/buildengine.png" alt={t('Core Concept')} class="placeholder-image" />
            </div>
        </section>

        <!-- Technical Details Section -->
        <section class="technical-details">
            <h2>{t('Technical Details')}</h2>
            <div class="content">
                <p>
                    {t('The engine is built entirely in C++ for performance and flexibility. Key technical features include:')}
                </p>
                <ul>
                    <li><strong>{t('AI-Driven World Generation')}</strong>: {t('Procedurally generates game worlds using machine learning algorithms.')}</li>
                    <li><strong>{t('Behavior Trees')}</strong>: {t('AI-controlled NPCs with dynamic decision-making capabilities.')}</li>
                    <li><strong>{t('Real-Time Adaptation')}</strong>: {t('The engine adapts to player behavior, creating a unique experience for each user.')}</li>
                    <li><strong>{t('Modular Design')}</strong>: {t('Easily extensible with plugins for additional functionality.')}</li>
                </ul>
            </div>
        </section>

        <!-- Key Features Section -->
        <section class="key-features">
            <h2>{t('Key Features')}</h2>
            <div class="features-grid">
                <!-- Feature Cards -->
                <div class="feature-card">
                    <h3>{t('AI-Driven World Generation')}</h3>
                    <p>{t('Procedurally generates game worlds using machine learning algorithms, ensuring unique and immersive environments.')}</p>
                </div>
                <div class="feature-card">
                    <h3>{t('Dynamic NPC Behavior')}</h3>
                    <p>{t('NPCs use behavior trees to make dynamic decisions, creating realistic and engaging interactions.')}</p>
                </div>
                <div class="feature-card">
                    <h3>{t('Real-Time Adaptation')}</h3>
                    <p>{t('The engine adapts to player behavior, providing a personalised user experience.')}</p>
                </div>
                <div class="feature-card">
                    <h3>{t('Modular Design')}</h3>
                    <p>{t('Easily extensible with plugins, allowing developers to add new features and functionality.')}</p>
                </div>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* General Styles */
    .ai-game-engine-page {
        padding: 20px;
        max-width: 1200px;
        margin: 0 auto;
        color: #e4e4e7;
    }

    .project-header {
        text-align: center;
        margin-bottom: 40px;
    }

    .project-header h1 {
        font-size: 2.5rem;
        color: #bb86fc;
    }

    .project-header p {
        font-size: 1.1rem;
        color: #a1a1aa;
    }

    /* Core Concept Section */
    .core-concept, .technical-details, .my-role, .future-development {
        margin-bottom: 40px;
    }

    .core-concept .content, .technical-details .content, .my-role .content, .future-development .content {
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .core-concept p, .technical-details p, .my-role p, .future-development p {
        flex: 2;
        font-size: 1rem;
        line-height: 1.6;
    }

    .placeholder-image {
        flex: 1;
        max-width: 300px;
        border-radius: 12px;
    }

    /* Key Features Section */
    .key-features {
        margin-bottom: 40px;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    .feature-card {
        background: rgba(255, 255, 255, 0.1);
        padding: 20px;
        border-radius: 12px;
    }

    .feature-card h3 {
        font-size: 1.25rem;
        color: #bb86fc;
        margin-bottom: 10px;
    }
</style>