---
import Nav from '../../components/Nav.astro'; // Adjust the path as necessary
import {languages} from '../../i18n/ui';
import {getLangFromUrl, translate, useTranslations} from '../../i18n/utils';
import Layout from '../../layouts/Layout.astro';

import { getSortedPosts, getPopularPosts } from '../../util/posts';

const recentPosts = getSortedPosts().slice(0, 5);
const popularPosts = getPopularPosts().slice(0, 5);

export async function getStaticPaths() {
    return languages.map(lang => ({params: {lang: lang.key}}));
}

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const web = await Astro.glob('../../content/web/*.mdx');


---
<Layout title={t('Welcome')}>
    <Nav lang={lang} />
    <main class="main">
        <img src="/Face.jpg" alt="Face" class="face-image" />
        <blockquote class="quote">
            <em>"This is a placeholder waiting for the existential life-changing and awe-inspiring quote!  ------ - Great Engineer Thommy 2024"</em>
        </blockquote>

                <div class="navbar-icons">
                    <a href="https://www.linkedin.com" target="_blank">
                        <img src="/linkedin.svg" alt="LinkedIn">
                    </a>
                    <a href="https://www.github.com" target="_blank">
                        <img src="/github.svg" alt="GitHub">
                    </a>
                    <a href="mailto:thomasisherwood@outlook.com" target="_blank">
                        <img src="/envelope-solid.svg" alt="Email">
                    </a>
                </div>

        <section id="about">
            <h2>{t('About Me')}</h2>
            <p>{t('I am a passionate game software engineer with experience in creating immersive gaming experiences. Specializing in game development and design, I enjoy bringing virtual worlds to life.')}</p>
        </section>
        <div>
            <h2>Skills</h2>
            <ul>
                <li>skill 1</li>
                <li>skill 2</li>
                <li>skill 3</li>
                <li>skill 4</li>
                <li>skill 5</li>
                <li>skill 6</li>
                <li>skill 7</li>
            </ul>
        </div>
        <div class="quote">
            lorem50*
        </div>

        <h2>Popular Posts</h2>
        <ul>
            {popularPosts.map(post => (
                    <li id={post.id}>
                        <a href={`/posts/${post.id}`}>{post.title}</a>
                    </li>
            ))}
        </ul>

        <ul>
            {web.map(w => (
                <li>
                    <w.Content />
                </li>
            ))}
        </ul>



    </main>
</Layout>

<style>
    :root {
        --background-color: #121212;
        --text-color: #e0e0e0;
        --accent-color: #bb86fc;
    }

    body {
        background-color: var(--background-color);
        color: var(--text-color);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    main {
        padding: 2rem;
        display: grid;
        grid-template-columns: repeat(6, 1fr);
    }

    header h1 {
        text-align: center;
        color: var(--accent-color);
        grid-column: auto;
        margin-outside: var(--accent-light);
        <!-- RECOMMENT -->
    }

    section {
        margin-bottom: 2rem;
    }

    #about {
        grid-column: span 5 / span 5;
    }

    h2 {
        color: var(--accent-color);
        border-bottom: 2px solid var(--accent-color);
        padding-bottom: 0.5rem;
    }

    p {
        line-height: 1.6;
    }

    .intro-container {
        display: flex;
        align-items: center;
        gap: 1rem;
        margin-bottom: 2rem;
    }

    .face-image {
        width: 150px;
        border: 2px solid var(--accent-color);
        border-radius: 50%;
        aspect-ratio: 1/1;
        object-fit: cover;
        place-self: center;
    }

    blockquote {
        font-size: 1.5rem;
        color: var(--accent-color);
        margin: 0;
        line-height: 1.5;
        text-align: left;
        flex-grow: 1;
        grid-column: span 5 / span 5;
        place-self: center;
    }

    .gallery {
        display: flex;
        gap: 1rem;
    }

    .gallery img {
        width: 100%;
        max-width: 200px;
        border: 2px solid var(--accent-color);
        border-radius: 8px;
    }

    a {
        color: var(--accent-color);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    .project-cards {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
        list-style: none;
        padding: 0;
    }

    @media (min-width: 768px) {
        .project-cards {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    .link-card {
        list-style: none;
        display: flex;
        flex-direction: column;
        padding: 1px;
        background-color: #23262d;
        background-image: none;
        background-size: 400%;
        border-radius: 7px;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
    }

    .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: calc(1.5rem - 1px);
        border-radius: 8px;
        color: white;
        background-color: #23262d;
        opacity: 0.8;
    }

    .iframe-container {
        width: 100%;
        height: 200px;
        overflow: hidden;
        border-radius: 7px 7px 0 0;
    }

    .iframe-container iframe {
        width: 100%;
        height: 100%;
        border: none;
    }

    h2 {
        margin: 1rem 0 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
    }

    p {
        margin-top: 0.5rem;
        margin-bottom: 0;
    }

    .read-more {
        color: var(--accent-color);
        cursor: pointer;
    }

    .link-card:is(:hover, :focus-within) {
        background-position: 0;
        background-image: var(--accent-gradient);
    }

    .link-card:is(:hover, :focus-within) h2 {
        color: rgb(var(--accent-light));
    }

    .navbar-icons {
        display: flex;
        gap: 1rem;
        place-items: center;
        justify-content: center;
    }

    .navbar-icons img {
        width: 24px;
        height: 24px;
        filter: brightness(0) invert(1);
        transition: filter 0.3s;
    }

    .navbar-icons img:hover {
        filter: brightness(0) invert(0.7);
    }
</style>
