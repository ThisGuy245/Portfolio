---
interface Props {
	title: string;
}

const { title } = Astro.props;
const domain = Astro.url.origin;
---

<link rel="alternate" hreflang="x-default" href=`${domain}/en/` />
<link rel="alternate" hreflang="en" href=`${domain}/en/` />
<link rel="alternate" hreflang="fr" href=`${domain}/fr/` />

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Astro description" />
	<meta name="viewport" content="width=device-width" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
</head>
<body>
<slot />
</body>
</html>

<style is:global>
	:root {
		/* Updated gradient colors: Navy blue with purple accents */
		--accent: 136, 58, 234; /* Purple accent */
		--accent-light: 102, 36, 152; /* Darker purple accent */
		--background-light: 13, 17, 40; /* Dark navy blue */
		--background-dark: 4, 6, 24; /* Deeper navy blue */
		--accent-gradient: linear-gradient(
			135deg,
			rgb(var(--background-dark)),
			rgb(var(--background-light)) 50%,
			rgb(var(--accent-light)) 90%,
			rgb(var(--accent)) 100%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: var(--accent-gradient);
		background-size: 224px;
		color: #e4e4e7; /* Soft off-white for better readability */
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
