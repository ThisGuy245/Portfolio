---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
const domain = Astro.url.origin;
---

<link rel="alternate" hreflang="x-default" href={`${domain}/en/`} />
<link rel="alternate" hreflang="en" href={`${domain}/en/`} />
<link rel="alternate" hreflang="fr" href={`${domain}/fr/`} />

<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8" />
	<meta name="description" content="Thomas Isherwood - Game Developer & Creative Technologist" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	<title>{title}</title>
</head>
<body>
	<slot />
</body>
</html>

<style is:global>
	:root {
		/* Modern, professional color palette */
		--color-bg: #0a0a0a;
		--color-bg-elevated: #141414;
		--color-surface: #1a1a1a;
		--color-surface-hover: #242424;
		--color-text: #e5e5e5;
		--color-text-muted: #a0a0a0;
		--color-accent: #6366f1;
		--color-accent-hover: #818cf8;
		--color-border: #2a2a2a;
		
		/* Spacing scale */
		--space-xs: 0.5rem;
		--space-sm: 1rem;
		--space-md: 1.5rem;
		--space-lg: 2rem;
		--space-xl: 3rem;
		--space-2xl: 4rem;
		
		/* Typography */
		--font-sans: 'Inter', system-ui, -apple-system, sans-serif;
		--font-mono: 'SF Mono', 'Monaco', 'Menlo', monospace;
	}

	* {
		box-sizing: border-box;
	}

	html {
		font-family: var(--font-sans);
		background: var(--color-bg);
		color: var(--color-text);
		-webkit-font-smoothing: antialiased;
		-moz-osx-font-smoothing: grayscale;
		line-height: 1.6;
	}

	body {
		margin: 0;
		padding: 0;
		padding-top: 80px;
		min-height: 100vh;
	}

	code {
		font-family: var(--font-mono);
		font-size: 0.9em;
	}

	.navbar {
		height: 60px;
	}

	@media (max-width: 768px) {
		body {
			padding-top: 70px;
		}

		.navbar {
			height: 50px;
		}
	}
</style>
