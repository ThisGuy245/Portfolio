---
import '../styles/global.css';
import GlitchBG from '../components/GlitchBG.svelte';

interface Props {
	title: string;
}

const { title } = Astro.props;
const domain = Astro.url.origin;
---

<link rel="alternate" hreflang="x-default" href={`${domain}/en/`} />
<link rel="alternate" hreflang="en" href={`${domain}/en/`} />
<link rel="alternate" hreflang="fr" href={`${domain}/fr/`} />

<!doctype html>
<html lang="en">
<head>

	<meta charset="UTF-8" />
	<meta name="description" content="Astro description" />
	<meta name="viewport" content="width=device-width, initial-scale=1" />
	<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
	<meta name="generator" content={Astro.generator} />
	<title>{title}</title>
	<GlitchBG client:only="svelte" />
</head>
<body>
<GlitchBG client:only="svelte" />
<slot />
</body>
</html>




<style is:global>
	:root {
		/* Cool steel + dark modern UI palette */
		--primary: 58, 129, 191;          /* Soft blue */
		--primary-dark: 30, 72, 120;      /* Deeper blue for shadows */
		--background-light: 24, 27, 34;   /* Slightly lighter dark */
		--background-dark: 14, 17, 23;    /* Base dark background */
		--accent-gradient: linear-gradient(
			135deg,
			rgb(var(--background-dark)),
			rgb(var(--background-light)) 40%,
			rgb(var(--primary-dark)) 80%,
			rgb(var(--primary)) 100%
		);
	}

	html {
		font-family: 'Inter', system-ui, sans-serif;
		background: var(--accent-gradient);
		background-size: cover;
		color: #f1f5f9; /* Light gray for readability */
	}

	body {
		margin: 0;
		padding: 0;
		padding-top: 100px;
		background: rgb(var(--background-dark)); /* Fallback solid color */
	}

	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}

	.navbar {
		height: 60px; /* The fixed height of the navbar */
	}

	/* For mobile responsiveness, adjust the padding */
	@media (max-width: 768px) {
		body {
			padding-top: 70px; /* Slightly less padding for smaller screens */
		}

		.navbar {
			height: 50px;
		}
	}

</style>
