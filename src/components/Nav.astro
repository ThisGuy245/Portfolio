---
// Mes Imports pour localisation
import { getLangFromUrl } from '../i18n/utils';
import { useTranslations } from '../i18n/utils';
import LanguagePicker from "./LanguagePicker.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Les routes pour la navigation
/*
const routes = [
    { title: t('Home'), path: `/${lang}` },
    { title: t('Projects'), path: `/${lang}/projects` },
    { title: t('Activity'), path: `/${lang}/activity` },
    { title: t('CV'), path: `/${lang}/cv` }
];*/
---

<nav class="navbar">
    <div class="navbar-content">
        <div class="navbar-brand">
            <span>Thomas Isherwood</span>
        </div>

        <!-- Hamburger Icon -->
        <button class="hamburger" onclick="toggleMenu()" aria-label="Toggle menu">
            â˜°
        </button>

        <!-- Menu Links -->
        <ul class="navbar-menu" id="nav-menu">
            <li class={`nav-item ${Astro.url.pathname === `/${lang}/` || Astro.url.pathname === `/${lang}` ? 'active' : ''}`}>
                <a href={`/${lang}/`}>{t('Home')}</a>
            </li>
            <li class={`nav-item ${Astro.url.pathname === `/${lang}/projects` ? 'active' : ''}`}>
                <a href={`/${lang}/projects`}>{t('Projects')}</a>
            </li>
            <li class={`nav-item ${Astro.url.pathname === `/${lang}/about` ? 'active' : ''}`}>
                <a href={`/${lang}/about`}>{t('About')}</a>
            </li>
            <li class={`nav-item ${Astro.url.pathname === `/${lang}/contact` ? 'active' : ''}`}>
                <a href={`/${lang}/contact`}>{t('Contact')}</a>
            </li>
            <li class={`nav-item ${Astro.url.pathname === `/${lang}/cv` ? 'active' : ''}`}>
                <a href={`/${lang}/cv`}>CV</a>
            </li>
            <!--
            <li class="nav-item">
                <a href="/ThomasResume.pdf" class="resume-btn, neon-text" target="_blank" rel="noopener noreferrer">{t('Resume')}</a>
            </li>-->
        </ul>

        <LanguagePicker />
    </div>
</nav>



<style>
    /* Main navbar container - full-width and fixed at top */
    .navbar {
        display: flex;
        justify-content: center;
        background-color: var(--color-bg-elevated);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid var(--color-border);
        padding: 1rem 2rem;
        position: fixed;
        width: 100%;
        top: 0;
        z-index: 1000;
    }

    /* Centered navbar content */
    .navbar-content {
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 100%;
        max-width: 1200px;
    }

    .navbar-brand span {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-text);
        letter-spacing: -0.01em;
    }

    .navbar-menu {
        list-style: none;
        display: flex;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        margin: 0;
        padding: 0;
    }

    .nav-item {
        margin: 0;
    }

    .nav-item a {
        color: var(--color-text-muted);
        text-decoration: none;
        font-weight: 500;
        font-size: 0.9375rem;
        padding: 0.5rem 1rem;
        border-radius: 6px;
        transition: all 0.2s ease;
    }

    .nav-item.active a {
        color: var(--color-accent);
        background-color: rgba(99, 102, 241, 0.1);
    }

    .nav-item a:hover,
    .nav-item a:focus {
        color: var(--color-text);
        background-color: var(--color-surface);
    }

    .language-picker {
        display: flex;
        align-items: center;
    }

    .language-picker button {
        background: none;
        border: none;
        cursor: pointer;
        padding: 0;
        margin: 0;
    }

    .language-picker img {
        width: 32px;
        height: 32px;
        border-radius: 50%;
        transition: transform 0.2s ease;
        opacity: 0.8;
    }

    .language-picker img:hover {
        transform: scale(1.1);
        opacity: 1;
    }

    /* Hamburger button (hidden on desktop) */
    .hamburger {
        display: none;
        font-size: 1.5rem;
        background: none;
        border: none;
        color: var(--color-text);
        cursor: pointer;
        padding: 0.5rem;
        border-radius: 6px;
        transition: background-color 0.2s;
    }

    .hamburger:hover {
        background-color: var(--color-surface);
    }
    /* Mobile Styles */
    @media (max-width: 768px) {
        .navbar {
            padding: 0.75rem 1rem;
        }

        .navbar-brand span {
            font-size: 1.125rem;
        }

        .hamburger {
            display: block;
            z-index: 1001;
        }

        .navbar-menu {
            position: fixed;
            top: 0;
            right: -100%;
            width: 280px;
            height: 100vh;
            background-color: var(--color-bg-elevated);
            border-left: 1px solid var(--color-border);
            display: flex;
            flex-direction: column;
            align-items: stretch;
            padding: 4rem 1.5rem 2rem;
            box-shadow: -4px 0 20px rgba(0, 0, 0, 0.3);
            transition: right 0.3s ease-out;
            z-index: 1000;
        }

        .navbar-menu.open {
            right: 0;
        }

        .nav-item {
            width: 100%;
            margin: 0;
            border-bottom: 1px solid var(--color-border);
        }

        .nav-item a {
            display: block;
            padding: 1rem;
            width: 100%;
            border-radius: 0;
        }

        .language-picker {
            margin-top: auto;
            padding-top: 2rem;
        }
    }
</style>

<script>
    const button = document.querySelector('.hamburger');
    const menu = document.getElementById('nav-menu');

    if (button && menu) {
        // Toggle menu
        const toggleMenu = () => {
            menu.classList.toggle('open');
            document.body.style.overflow = menu.classList.contains('open') ? 'hidden' : '';
        };

        button.addEventListener('click', toggleMenu);

    }
</script>