---
interface Project {
	title: string;
	body: string;
	href: string;
	videoSrc?: string;
	placeholderImg: string;
}

interface Props {
	project: Project;
}

const { project } = Astro.props;
---

<li class="link-card">
	<a href={project.href}>
		<div class="media-container">
			{project.videoSrc ? (
				<video playsinline autoplay loop muted src={project.videoSrc}></video>
			) : (
				<img src={project.placeholderImg} alt="Placeholder image" />
			)}
		</div>
		<h2>
			{project.title}
			<span>&rarr;</span>
		</h2>
		<p>
			{project.body.slice(0, 100)}... <span class="read-more">READ MORE</span>
		</p>
	</a>
</li>

<style>
	.link-card {
		list-style: none;
		display: flex;
		flex-direction: column;
		padding: 1px;
		background-color: #23262d;
		border-left: 5px solid var(--accent-color);
		border-radius: 7px;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
		overflow: hidden;
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}

	.media-container {
		width: 100%;
		height: 200px;
		overflow: hidden;
		border-radius: 7px 7px 0 0;
	}

	.media-container video,
	.media-container img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		border: none;
		overflow: hidden;
	}

	h2 {
		margin: 1rem 0 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}

	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	.read-more {
		color: var(--accent-color);
		cursor: pointer;
	}

	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}

	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
