---
export interface ProjectCardProps {
    project: {
        title: string;
        body: string;
        href: string;
        videoSrc?: string;
        placeholderImg?: string;
        icons?: string[];
        teamSize?: number;
        websiteUrl?: string; // New property for website URL
    };
}

const { title, body, href, videoSrc, placeholderImg, icons, teamSize, websiteUrl } = Astro.props.project;
---

<div class="project-card">
    <div class="media-container">
        {videoSrc ? (
                <video
                        src={videoSrc}
                        autoplay
                        muted
                        loop
                        playsinline
                        disablepictureinpicture
                        class="project-video"
                >
                    Your browser does not support the video tag.
                </video>
        ) : (
                <img src={placeholderImg} alt={title} class="project-image" />
        )}
    </div>

    <div class="project-info">
        <h3><a href={href}>{title}</a></h3>
        <p>{body}</p>

        <!-- Go to Site Button (Conditional)
        {websiteUrl && (
                <div class="website-link-container">
                    <a href={websiteUrl} class="website-link" target="_blank" rel="noopener noreferrer">
                        Go to Site
                    </a>
                </div>
        )}-->

        <!-- Technologies Section -->
        {icons && icons.length > 0 && (
                <div class="icon-container">
                    {icons.map((icon: string, index: number) => (
                            <img src={icon} alt={`Tech Icon ${index}`} class="tech-icon" />
                    ))}
                </div>
        )}

        <!-- Team Size Section -->
        {teamSize && (
                <div class="team-size">
                    <img
                            src={teamSize === 1 ? "/user.svg" : "/users.svg"}
                            alt="Team Size"
                            class="people-icon"
                    />
                    <span>{teamSize}</span>
                </div>
        )}
    </div>
</div>

<style>
    .project-card {
        background: var(--color-surface);
        border: 1px solid var(--color-border);
        border-radius: 12px;
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: all 0.2s ease;
        color: var(--color-text);
    }

    .project-card:hover {
        border-color: var(--color-accent);
        transform: translateY(-4px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.3);
    }

    .media-container {
        width: 100%;
        overflow: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        background: var(--color-bg);
        aspect-ratio: 16/9;
    }

    .media-container video,
    .media-container img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .project-info {
        padding: var(--space-md);
        display: flex;
        flex-direction: column;
        flex: 1;
    }

    .project-info h3 {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0 0 var(--space-xs);
        color: var(--color-text);
    }

    .project-info h3 a {
        color: inherit;
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .project-info h3 a:hover {
        color: var(--color-accent);
    }

    .project-info p {
        font-size: 0.9375rem;
        line-height: 1.6;
        margin-bottom: var(--space-md);
        color: var(--color-text-muted);
        flex: 1;
    }

    /* Website Link Container */
    .website-link-container {
        margin: 1rem 0;
        text-align: center;
    }
    /*
    .website-link {
        display: inline-block;
        padding: 0.5rem 1rem;
        border: 1px solid rgba(var(--accent), 0.5);
        border-radius: 6px;
        color: rgba(var(--accent), 0.9);
        text-decoration: none;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .website-link:hover {
        background-color: rgba(var(--accent), 0.1);
        border-color: rgba(var(--accent), 1);
        color: rgba(var(--accent), 1);
    }
*/

    /* Technologies Section */
    .icon-container {
        display: flex;
        gap: var(--space-xs);
        flex-wrap: wrap;
        margin-top: auto;
        padding-top: var(--space-sm);
        border-top: 1px solid var(--color-border);
    }

    .tech-icon {
        width: 20px;
        height: 20px;
        opacity: 0.7;
        transition: opacity 0.2s ease;
    }

    .tech-icon:hover {
        opacity: 1;
    }

    /* Team Size Section */
    .team-size {
        display: flex;
        align-items: center;
        gap: var(--space-xs);
        margin-top: var(--space-sm);
        padding-top: var(--space-sm);
        border-top: 1px solid var(--color-border);
        color: var(--color-text-muted);
        font-size: 0.875rem;
    }

    .people-icon {
        width: 16px;
        height: 16px;
        opacity: 0.7;
    }
</style>